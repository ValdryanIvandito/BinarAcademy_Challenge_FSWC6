<%- include('layouts/header') %>

<div class="container" style="display: flex; align-items: center; justify-content: center; height: 100%;">
    <p class="tScores">scores <%= scores %></p>
</div>

<% if (result === 'PLAYER1 WIN!' && playerOne === 'scissors' && playerCom === 'paper') { %>
    <%- include('layouts/p1-sp') %>
<% } else if (result === 'PLAYER1 WIN!' && playerOne === 'paper' && playerCom === 'rock') { %>
    <%- include('layouts/p1-pr') %>
<% } else if (result === 'PLAYER1 WIN!' && playerOne === 'rock' && playerCom === 'scissors') { %>
    <%- include('layouts/p1-rs') %>
<% } else if (result == 'COM WIN!' && playerCom === 'scissors' && playerOne === 'paper') { %>
    <%- include('layouts/pc-sp') %>
<% } else if (result == 'COM WIN!' && playerCom === 'paper' && playerOne === 'rock') { %>
    <%- include('layouts/pc-pr') %>
<% } else if (result == 'COM WIN!' && playerCom === 'rock' && playerOne === 'scissors') { %>
    <%- include('layouts/pc-rs') %>
<% } else if (result == 'DRAW!' && playerCom === 'scissors' && playerOne === 'scissors') { %>
    <%- include('layouts/drw-ss') %>
<% } else if (result == 'DRAW!' && playerCom === 'paper' && playerOne === 'paper') { %>
    <%- include('layouts/drw-pp') %>
<% } else if (result == 'DRAW!' && playerCom === 'rock' && playerOne === 'rock') { %>
    <%- include('layouts/drw-rr') %>
<% } else { %>
    <%- include('layouts/content') %>
<% } %>

<!-- Refresh -->
        <div class="row align-items-center" style="height: 100px;">
            <div class="container">
                <form method="post" action="/restart">
                    <input type="hidden" name="scores" value="<%= scores %>">
                    <button class="bRefresh" type="submit">
                        <img src="../refresh.png" style="width: 77px; height: 71px;">
                    </button>
                </form>
            </div>
        </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </body>
</html>
